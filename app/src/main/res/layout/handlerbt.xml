<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/txtiuh"
        android:text="IUH BAND"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/txtiuh"
        android:textSize="18sp"
        android:id="@+id/txttb"
        android:layout_centerHorizontal="true"
        android:text="Chọn thiết bị kết nối"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lvBT"
        android:layout_below="@+id/txttb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnKetNoi"/>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnKetNoi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:text="Ket noi" />

</RelativeLayout>